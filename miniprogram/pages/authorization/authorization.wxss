/* miniprogram/pages/authorization/authorization.wxss */
#authorizeview {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
#avatar {
  overflow:hidden;
  display: block;
  width: 300rpx;
  height: 300rpx;
  margin: 50rpx;
  margin-top: 200rpx;
  border-radius: 50%;
  border: 1px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
#authorizebutton {
  margin-top: 70rpx;
  background-color: #FFE4B5;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
#omotetext {
  font-size: 15pt;
}
#uratext {
  visibility: hidden;
  font-size: 15pt;
}
#uraview {
  position: relative;
  bottom: 38pt;
  height: 0rpx;
}

#tipview {
  color: #A29D9D;
  text-align: center;
  font-size: 10pt;
  margin-top: 15rpx;
}

#nextbutton {
  position: fixed;
  right: 50rpx;
  bottom: 30rpx;
}
#nexttext {
  color: #FF7256 ;
}
#nexticon {
  color: #FF7256 ;
}
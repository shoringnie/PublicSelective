/* miniprogram/pages/evaluation/evaluation.wxss */
#coursenameview {
  margin-top: 80rpx;
  width: 650rpx;
  margin-left: auto;
  margin-right: auto;
}
#coursename {
  font-size: 20pt;
}
#evaluationview {
  width: 650rpx;
  margin-top: 70rpx;
  margin-left: auto;
  margin-right: auto;
}
.evaluationpart {
  width: 650rpx;
}
.evaluationparttitle {
  margin-bottom: 30rpx;
}
.scoreview {
  display: flex;
  flex-direction: row;
  justify-content:center; 
  margin-bottom: 10rpx;
}
van-rate {
  display: flex;
}
.ratetext {
  margin-left: 30rpx;
  display: flex;
  font-size: 15pt;
}
.separateline {
  width: 600rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #B9B9B9;
}
#tagsviewborder {
  width: 650rpx;
  margin-left: auto;
  margin-right: auto;
  border: 1rpx solid #d8d8d8;
}
#tagsview {
  width: 580rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.singletagview {
  display: inline-block;
  margin: 10rpx;
}
.singletagsubview1 {
  background-color: #f5f5f5;
  padding: 8rpx 15rpx;
}
.singletagsubview2 {
  background-color: #FFA500;
  padding: 8rpx 15rpx;
}
.tagtext {
  font-size: 10pt;
}
#contentview {
  display: flex;
  border: 1rpx solid #d8d8d8;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
#inputtext {
  height: 200rpx;
  width: 100%;
}
#submitbuttonview {
  margin: 50rpx auto 70rpx;
  display: flex;
  justify-content: center;
}